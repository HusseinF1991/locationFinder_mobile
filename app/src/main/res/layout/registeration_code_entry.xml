<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/box"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/txtDialogRegTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="18sp"
        android:textColor="#52085d"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/etxtDialogRegCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:hint="أدخل الرمز هنا"
        android:inputType="number"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="17sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/txtbox"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            android:id="@+id/btnCancelRegCode"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:text="الغاء"
            android:background="#13A5bb"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/txtTimerDelay"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:textColor="@android:color/holo_red_light"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/btnRequestRegCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="طلب الرمز"
            android:background="#13A5bb"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/btnSubmitRegCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="اكمال التسجيل"
            android:background="#13A5bb"
            android:textColor="#ffffff"/>

    </LinearLayout>


    <TextView
        android:id="@+id/txtReqCode_Tries"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="عدد المحاولات المتبقية : 3"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@android:color/holo_red_light"
        android:textSize="20sp"/>

</LinearLayout>