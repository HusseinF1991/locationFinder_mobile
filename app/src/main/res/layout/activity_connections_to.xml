<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.uruksys.LocationFinderApp.com.uruksys.LocationFinderApp.ConnectionsToActivity"
    android:background="@drawable/background2">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_ConnectionsTo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:titleTextColor="@android:color/white"></androidx.appcompat.widget.Toolbar>

        <ListView
            android:id="@+id/listConnectionsTo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerHeight="0dp"
            android:divider="@null"
            android:footerDividersEnabled="false"
            android:headerDividersEnabled="false" />

</LinearLayout>