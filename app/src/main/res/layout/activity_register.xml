<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.uruksys.LocationFinderApp.com.uruksys.LocationFinderApp.RegisterActivity"
    android:background="@drawable/background2">

    <ProgressBar
        android:id="@+id/progressBar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/locationfinderlogo"
        android:layout_gravity="center"/>


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#1508c7"
        android:textSize="20sp"
        android:layout_marginTop="25dp"
        android:text="يرجى ملئ الحقول لغرض التسجيل" />


    <EditText
        android:id="@+id/etxtUserName"
        android:layout_width="300dp"
        android:layout_height="49dp"
        android:layout_gravity="center"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:gravity="center"
        android:background="@drawable/txtbox"
        android:hint="اسم المستخدم"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etxtPhoneNumber"
        android:layout_width="300dp"
        android:layout_height="52dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:gravity="center"
        android:background="@drawable/txtbox"
        android:hint="رقم الهاتف"
        android:inputType="number"/>

    <Spinner
        android:id="@+id/simIdSpinner"
        android:layout_width="300dp"
        android:layout_height="52dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:paddingTop="7dp"
        android:background="#ffffff"
        android:gravity="center_horizontal"/>

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="تسجيل"
        android:background="#13A5bb"
        android:textColor="#ffffff" />

</LinearLayout>